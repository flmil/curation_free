<% @viewtitle = "新規アカウント作成" %>
<div>
	<center>
		<table class="user-form">
			<tr>
				<td><h1>新規会員登録</h1>
				</td>
			</tr>
			<tr>
				<td>
					<center>
						<form action="/signup" method="post">
							<div>
								<div>
									<p>名前を入力してください</p>
									<input name="name" placeholder="name"><br>
									<p>メールアドレスを入力してください</p>
									<input name="mail" placeholder="mail"><br>
									<p>パスワードを設定してください</p>
									<input name="password" type="password" placeholder="password"><br>
									<p>上の項目と同じパスワードを入力してください</p>
									<input name="password_confirmation" type="password" placeholder="password">
								</div>
								<br>
								<div>
									<input type="submit" value="登録" class="user-form-button">
								</div>
							</div>
						</form>
						<h2><a href="/signin">すでに会員の方はこちら</a></h2>
					</center>
				</td>
			</tr>
</div>
